{
  "metadata": {
    "name": "Image Display",
    "version": "1.0.0",
    "description": "Simple image display addon - show any image from a URL with customizable styling",
    "author": "MyWallpaper", 
    "icon": "üñºÔ∏è"
  },
  "settings": {
    "imageUrl": {
      "type": "url",
      "label": "Image URL",
      "description": "Direct link to the image you want to display",
      "default": "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=300&fit=crop"
    },
    "altText": {
      "type": "text",
      "label": "Alt Text",
      "description": "Alternative text for accessibility",
      "default": "Display Image"
    },
    "borderRadius": {
      "type": "range",
      "label": "Border Radius",
      "description": "Roundness of image corners",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 8
    },
    "borderWidth": {
      "type": "range",
      "label": "Border Width", 
      "description": "Thickness of image border",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 0
    },
    "borderColor": {
      "type": "color",
      "label": "Border Color",
      "description": "Color of the image border",
      "default": "#FFFFFF"
    },
    "shadowBlur": {
      "type": "range",
      "label": "Shadow Blur",
      "description": "Softness of drop shadow",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 10
    },
    "shadowColor": {
      "type": "color", 
      "label": "Shadow Color",
      "description": "Color of the drop shadow",
      "default": "#000000"
    },
    "shadowOpacity": {
      "type": "range",
      "label": "Shadow Opacity",
      "description": "Transparency of the shadow",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    },
    "fitMode": {
      "type": "select",
      "label": "Image Fit",
      "description": "How the image should fit within its container",
      "options": [
        { "value": "cover", "label": "Cover (crop to fill)" },
        { "value": "contain", "label": "Contain (fit entirely)" },
        { "value": "fill", "label": "Fill (stretch to fit)" },
        { "value": "scale-down", "label": "Scale Down" }
      ],
      "default": "cover"
    },
    "enableHover": {
      "type": "boolean",
      "label": "Hover Effects",
      "description": "Enable hover animations and effects",
      "default": true
    },
    "hoverScale": {
      "type": "range",
      "label": "Hover Scale",
      "description": "Scale factor on hover (1.0 = no change)",
      "min": 0.8,
      "max": 1.5,
      "step": 0.1,
      "default": 1.05
    }
  }
}